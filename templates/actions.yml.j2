actions:
{% for obj in elasticsearch_curator_action_set_item.value  %}
  {{ loop.index }}:
{% for key,value in obj|dictsort %}

{#- ACTION #}
{% if key == 'action' %}
    action: {{ value }}
{% endif %}
{# ACTION -#}

{#- DESCRIPTION #}
{% if key == 'description' %}
    description: >-
      {{ value }}
{% endif %}
{# DESCRIPTION -#}

{#- OPTIONS #}
{% if key == 'options' %}
    options:
{{ value | to_nice_yaml | indent(6, first=True) }}
{% endif %}
{# OPTIONS -#}

{#- FILTERS #}
{% if key == 'filters' %}
    filters:
{% for filter in value %}
      -
{% for k,v in filter|dictsort %}
        {{ k }}: {{ v }}
{% endfor %}
{% endfor %}
{% endif %}
{# FILTERS -#}

{#- ADD #}
{% if key == 'add' %}
    add:
      filters:
{% for filter in value.filters %}
        -
{% for k,v in filter|dictsort %}
          {{ k }}: {{ v }}
{% endfor %}
{% endfor %}
{% endif %}
{# ADD -#}

{#- REMOVE #}
{% if key == 'remove' %}
    remove:
      filters:
{% for filter in value.filters %}
        -
{% for k,v in filter|dictsort %}
          {{ k }}: {{ v }}
{% endfor %}
{% endfor %}
{% endif -%}
{# REMOVE -#}

{% endfor %}
{% endfor %}
